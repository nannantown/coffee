# Fastfile for iOS builds and deployments

default_platform(:ios)

platform :ios do
  # Setup CI environment
  before_all do
    if is_ci
      setup_ci
    end
  end

  # Build and upload to TestFlight
  desc "Build and upload to TestFlight"
  lane :beta do
    # Increment build number based on TestFlight
    increment_build_number(
      build_number: latest_testflight_build_number + 1,
      xcodeproj: "Runner.xcodeproj"
    )

    # Sync code signing (using Match)
    match(
      type: "appstore",
      readonly: is_ci,
      app_identifier: CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier)
    )

    # Build the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier) => ENV["MATCH_PROFILE_NAME"]
        }
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      changelog: "自動ビルド: #{git_branch} - #{last_git_commit[:message]}"
    )
  end

  # Build only (no upload)
  desc "Build the app for release"
  lane :build do
    match(
      type: "appstore",
      readonly: is_ci
    )

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store"
    )
  end

  # Setup code signing with Match
  desc "Setup code signing certificates"
  lane :certificates do
    match(
      type: "appstore",
      readonly: false
    )
  end

  # Register new device for development
  desc "Register new device"
  lane :register_device do |options|
    device_name = options[:name]
    device_udid = options[:udid]

    register_devices(
      devices: {
        device_name => device_udid
      }
    )

    match(
      type: "development",
      force_for_new_devices: true
    )
  end
end
